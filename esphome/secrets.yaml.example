# Copier ce fichier en secrets.yaml et remplir avec tes vraies valeurs.
# secrets.yaml ne doit jamais être commité (.gitignore).
#
# OBLIGATOIRE : wifi_ssid, wifi_password, ota_password.
# Pour alerte eedomus : eedomus_host, eedomus_api_user, eedomus_api_secret, eedomus_periph_alert.

wifi_ssid: "TON_SSID_WIFI"
wifi_password: "TON_MOT_DE_PASSE_WIFI"
ota_password: "MOT_DE_PASSE_OTA"

# Point d'accès de secours (si WiFi échoue)
ap_ssid: "BLE-INTRUSION-RECOVERY"
ap_password: "MOT_DE_PASSE_AP_SECOURS"

# Eedomus – alerte sur nouvel UID BLE (uniquement quand le système est armé)
eedomus_host: "IP_OU_HOST_EEDOMUS"
eedomus_api_user: "TON_API_USER"
eedomus_api_secret: "TON_API_SECRET"
eedomus_periph_alert: "0"

# Optionnel : IP fixe (décommenter et ajouter manual_ip dans ble-sniffer.yaml si besoin)
# static_ip: "192.168.1.225"
# gateway: "192.168.1.1"
# subnet: "255.255.255.0"
